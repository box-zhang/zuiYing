hollow()
  line-height: 2
  padding: 6px 10px
  width: 80%
  border: 1px solid $color-white-ll
  color: $color-white-ll
  &:hover
    color: $color-white
    border:  1px solid $color-white
  &:focus
    box-shadow: 0 0 0 2px $color-white-d