// header
.header
  position: relative
  top: 0
  left: 50%
  margin-left: -720px
  margin-top: 45px
  width: 1440px
  background-size: auto 100%
  height: auto
  text-align: center
// layout
.layout
  position: relative
  background: none
  width: 100%
  font-size: 14px
.ivu-layout
  background: none
.wrapper-main
  padding-top: 100px
.content
  margin: 0 40px
.content-top
  margin-top: 45px
.main
  position: relative
  z-index: 2
  display: block
  max-width: 1180px
  min-width: 900px
  padding: 0 10px
  margin:0 auto
  // overflow:hidden
  &:after
    display: block
    content: "."
    height: 0
    line-height: 0
    clear: both
    visibility: hidden
.good-work
  display: flex
  flex-wrap: wrap
  justify-content: space-between
  align-items: flex-start
.title-black
  text-align: center
  h2
    font-size: 28px
    line-height: 48px
  p
    margin-top: 15px
    font-size: 12px
    line-height: 20px

.title-active
  position: relative
  line-height: 24px
  h3,.active-more
    padding: 20px 0
  h3
    font-size: 18px
    color: $color-text-l
  .active-more
    position: absolute
    top: 0
    right: 10px
    font-size: 14px

.link-a a
  color: $color-emphasis-l
  &:hover
    color: $color-emphasis-ll

.positive
  positive()
.negative
  negative()
.btn-small
  btnSmall()
.ivu-input-group-prepend
  position: absolute
  z-index: 5
  top: 0
  left: 0
  border: 0
.ivu-icon
  font-size: 18px
  color: $color-text-d
.ivu-input
  padding: 4px 7px 4px 32px
.ivu-input, .ivu-input-group-append, .ivu-input-group-prepend
  border-radius: 15px
.form-wrapper .ivu-input-group-prepend
  position: absolute
  z-index: 5
  top: 0
  left: 0
  border: 0
  margin: 2px
  border-radius: 15px
  background: transparent
  width: 28px
  height: 28px
  line-height: 24px
  text-align: center
.ivu-form-item-error .ivu-input
  border: 1px solid $color-positive-background-l
.ivu-form-item-error-tip
  color: $color-positive-background

// commponents-card
.card
  margin: 10px 0
  display: inline-block
  .ivu-card-head
    padding: 0
  img
    width: 100%
  .card-name
    height: auto
    font-size: 14px
    color: $color-theme
    font-weight: bold
  .card-pic
    position: relative
    height: 200px
    border-radius: 10px 10px 0 0
    background-color: $color-negative-background-m
    overflow: hidden
.ivu-card
  border: 1px solid $color-negative-background-m
  box-shadow: 0 0 8px 0 rgba(220,220,236,0.40)
  border-radius: 10px
// flex layout
.good-work
  display: flex
  flex-wrap: wrap
  justify-content: space-between
  align-items: flex-start